<table>
  <tbody>
    <% book.comments.each do |comment| %>
    <tr>
  <td>
    <%= link_to(comment.user) do %>
      <%= image_tag comment.user.get_profile_image, size: "50x50" %><br>
      <%= comment.user.name %>
    <% end %>
  </td>
  <td><%= comment.content %></td>
  <% if comment.user == current_user %>
    <td><%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %></td>
  <% end %>
</tr>
    <% end %>
  </tbody>
</table>