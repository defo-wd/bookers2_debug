<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Followers</th>
      <th>Followings</th>
      <th>Follow</th>
      <th>Show</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= link_to user do %>
          <%= image_tag user.get_profile_image, size: '50x50' %>
        <% end %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.followers_count %></td>
        <td><%= user.followings_count %></td>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", user_relationships_path(user), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "Follow", user_relationships_path(user), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to "Show", user_path(user), class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>