<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
      <tr>
        <th>Name</th>
        <th>Followers</th>
        <th>Followings</th>
        <th>Follow</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.followers_count %></td>
          <td><%= user.followings_count %></td>
          <td>
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to "Unfollow", user_relationships_path(user), method: :delete, class: "btn btn-danger" %>
              <% else %>
                <%= link_to "Follow", user_relationships_path(user), method: :post, class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to "Show", user_path(user), class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book), class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
